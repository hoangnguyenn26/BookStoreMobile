<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Bookstore.Mobile.ViewModels"
             x:DataType="vm:AddEditSupplierViewModel"
             x:Class="Bookstore.Mobile.Views.AddEditSupplierPage"
             Title="{Binding Title}"
             BackgroundColor="#F8F9FA">

    <ScrollView>
        <Grid RowDefinitions="Auto,*" Padding="20">
            <!-- Header Section -->
            <VerticalStackLayout Grid.Row="0" Spacing="5" Margin="0,10,0,15">
                <Label Text="{Binding Title}" 
                       Style="{StaticResource Headline}" 
                       HorizontalOptions="Center" 
                       FontSize="24"
                       FontAttributes="Bold"/>
                <BoxView HeightRequest="2" 
                         HorizontalOptions="Center" 
                         WidthRequest="60"
                         Color="{AppThemeBinding Light=#3498DB, Dark=#5DADE2}"
                         Margin="0,5,0,10"/>
            </VerticalStackLayout>

            <!-- Loading and Error States -->
            <VerticalStackLayout Grid.Row="1" HorizontalOptions="Center" VerticalOptions="Center" IsVisible="{Binding IsBusy}">
                <ActivityIndicator IsRunning="{Binding IsBusy}" 
                                   IsVisible="True"
                                   Color="{AppThemeBinding Light=#3498DB, Dark=#5DADE2}"
                                   HeightRequest="50" 
                                   WidthRequest="50"/>
                <Label Text="Loading..." 
                       HorizontalOptions="Center" 
                       Margin="0,10,0,0"/>
            </VerticalStackLayout>

            <!-- Error Message -->
            <Frame Grid.Row="1" 
                   IsVisible="{Binding HasError}"
                   BackgroundColor="#FFEBEE"
                   BorderColor="#E57373"
                   Padding="15"
                   CornerRadius="8"
                   Margin="0,10,0,15">
                <StackLayout Orientation="Horizontal" Spacing="10">
                    <Label Text="⚠️" FontSize="20" VerticalOptions="Center"/>
                    <Label Text="{Binding ErrorMessage}" 
                           TextColor="#D32F2F"
                           FontSize="14"
                           VerticalOptions="Center"/>
                </StackLayout>
            </Frame>

            <!-- Main Form Content -->
            <VerticalStackLayout Grid.Row="1" IsVisible="{Binding ShowContent}" Spacing="16">
                <!-- Supplier Information Card -->
                <Frame BackgroundColor="White" 
                       BorderColor="#E0E0E0" 
                       CornerRadius="10" 
                       Padding="15" 
                       HasShadow="True">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="Supplier Information" 
                               FontAttributes="Bold" 
                               FontSize="16"
                               TextColor="{AppThemeBinding Light=#3498DB, Dark=#5DADE2}"/>

                        <Frame Style="{StaticResource EntryFrame}" 
                               BorderColor="#E0E0E0" 
                               BackgroundColor="#F5F5F5"
                               Padding="10,2" 
                               CornerRadius="6">
                            <Entry Placeholder="Supplier Name *" 
                                   Text="{Binding Name}" 
                                   ReturnType="Next"
                                   PlaceholderColor="#BDBDBD"/>
                        </Frame>

                        <Frame Style="{StaticResource EntryFrame}" 
                               BorderColor="#E0E0E0" 
                               BackgroundColor="#F5F5F5"
                               Padding="10,2" 
                               CornerRadius="6">
                            <Entry Placeholder="Contact Person" 
                                   Text="{Binding ContactPerson}" 
                                   ReturnType="Next"
                                   PlaceholderColor="#BDBDBD"/>
                        </Frame>

                        <Frame Style="{StaticResource EntryFrame}" 
                               BorderColor="#E0E0E0" 
                               BackgroundColor="#F5F5F5"
                               Padding="10,2" 
                               CornerRadius="6">
                            <Entry Placeholder="Email" 
                                   Text="{Binding Email}" 
                                   Keyboard="Email"
                                   ReturnType="Next"
                                   PlaceholderColor="#BDBDBD"/>
                        </Frame>

                        <Frame Style="{StaticResource EntryFrame}" 
                               BorderColor="#E0E0E0" 
                               BackgroundColor="#F5F5F5"
                               Padding="10,2" 
                               CornerRadius="6">
                            <Entry Placeholder="Phone" 
                                   Text="{Binding Phone}" 
                                   Keyboard="Telephone"
                                   ReturnType="Next"
                                   PlaceholderColor="#BDBDBD"/>
                        </Frame>

                        <Frame Style="{StaticResource EntryFrame}" 
                               HeightRequest="90" 
                               BorderColor="#E0E0E0" 
                               BackgroundColor="#F5F5F5"
                               Padding="10,2" 
                               CornerRadius="6">
                            <Editor Placeholder="Address (Optional)" 
                                    Text="{Binding Address}" 
                                    AutoSize="TextChanges"
                                    PlaceholderColor="#BDBDBD"/>
                        </Frame>
                    </VerticalStackLayout>
                </Frame>

                <!-- Save Button -->
                <Button Text="Save Supplier" 
                        Command="{Binding SaveSupplierCommand}" 
                        IsEnabled="{Binding CanSaveSupplier}" 
                        Style="{StaticResource PrimaryButton}"/>
            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage> 