<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Bookstore.Mobile.ViewModels"
             xmlns:dto="clr-namespace:Bookstore.Mobile.Models"
             x:DataType="vm:StockReceiptListViewModel"
             x:Class="Bookstore.Mobile.Views.StockReceiptListPage"
             Title="{Binding Title}">

    <Grid RowDefinitions="Auto, *">
        <Grid Grid.Row="0" Padding="15,10" ColumnDefinitions="*,Auto">
            <Label Text="Stock Receipts" Style="{StaticResource Headline}" VerticalOptions="Center"/>
            <Button Grid.Column="1" Text="+ New Receipt" Command="{Binding GoToCreateReceiptCommand}" Style="{StaticResource TextButton}"/>
        </Grid>

        <!-- State Indicators -->
        <ActivityIndicator Grid.Row="0" Grid.RowSpan="2" 
                          IsRunning="{Binding IsBusy}" 
                          IsVisible="{Binding IsBusy}" 
                          VerticalOptions="Center" 
                          HorizontalOptions="Center"/>

        <Label Grid.Row="1" 
               Text="{Binding ErrorMessage}" 
               Style="{StaticResource ErrorLabel}" 
               IsVisible="{Binding HasError}" 
               VerticalOptions="Center" 
               HorizontalOptions="Center"/>

        <!-- Main Content -->
        <RefreshView Grid.Row="1" 
                     Command="{Binding LoadReceiptsCommand}" 
                     CommandParameter="true" 
                     IsRefreshing="{Binding IsBusy}" 
                     IsVisible="{Binding ShowContent}">
            <CollectionView ItemsSource="{Binding Receipts}"
                           SelectionMode="Single"
                           SelectionChangedCommand="{Binding GoToReceiptDetailsCommand}"
                           SelectionChangedCommandParameter="{Binding Source={RelativeSource Self}, Path=SelectedItem}"
                           RemainingItemsThreshold="5"
                           RemainingItemsThresholdReachedCommand="{Binding LoadMoreReceiptsCommand}"
                           VerticalOptions="FillAndExpand">

                <CollectionView.EmptyView>
                    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="20">
                        <Label Text="No stock receipts found." HorizontalOptions="Center" VerticalOptions="Center" Margin="20"/>
                        <Button Text="Retry" 
                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:StockReceiptListViewModel}}, Path=LoadReceiptsCommand}"
                                CommandParameter="true"
                                Margin="0,10"
                                Style="{StaticResource TextButton}"/>
                    </StackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="dto:StockReceiptDto">
                        <Border Style="{StaticResource CardBorder}" Padding="15" Margin="0,0,0,10">
                            <Grid RowDefinitions="Auto, Auto" ColumnDefinitions="*, Auto" RowSpacing="5">
                                <!-- Receipt ID -->
                                <Label Grid.Row="0" Grid.Column="0" FontSize="Small" TextColor="{StaticResource Gray600Light}">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="Receipt #"/>
                                            <Span Text="{Binding Id, Converter={StaticResource GuidShortenerConverter}}"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>

                                <!-- Receipt Date -->
                                <Label Grid.Row="0" Grid.Column="1" 
                                       Text="{Binding ReceiptDate, StringFormat='{0:dd MMM yyyy}'}" 
                                       FontSize="Small" 
                                       HorizontalTextAlignment="End"/>

                                <!-- Supplier -->
                                <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                                       Text="{Binding Supplier.Name, TargetNullValue='Supplier: N/A'}" 
                                       FontAttributes="Bold"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>