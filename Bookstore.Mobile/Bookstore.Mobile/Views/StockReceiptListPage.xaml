<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Bookstore.Mobile.ViewModels"
             xmlns:dto="clr-namespace:Bookstore.Mobile.Models"
             xmlns:converters="clr-namespace:Bookstore.Mobile.Converters"
             xmlns:system="clr-namespace:System;assembly=netstandard"
             x:DataType="vm:StockReceiptListViewModel"
             x:Class="Bookstore.Mobile.Views.StockReceiptListPage"
             Title="{Binding Title}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Styles -->
            <Style x:Key="Headline" TargetType="Label">
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="FontAttributes" Value="Bold"/>
            </Style>

            <Style x:Key="TextButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="Transparent"/>
                <Setter Property="TextColor" Value="{StaticResource Primary}"/>
            </Style>

            <Style x:Key="ErrorLabel" TargetType="Label">
                <Setter Property="TextColor" Value="Red"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
            </Style>

            <Style x:Key="CardBorder" TargetType="Border">
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="Stroke" Value="LightGray"/>
                <Setter Property="StrokeShape" Value="Rectangle"/>
                <Setter Property="StrokeThickness" Value="1"/>
            </Style>

            <!-- Converters -->
            <converters:GuidShortenerConverter x:Key="GuidShortenerConverter"/>
            <converters:ObjectNotNullBoolConverter x:Key="ObjectNotNullBoolConverter"/>
            <converters:StringNotNullOrEmptyBoolConverter x:Key="StringNotNullOrEmptyBoolConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto, *">
        <!-- Header -->
        <Grid Grid.Row="0" Padding="15,10" ColumnDefinitions="*,Auto">
            <Label Text="Stock Receipts" Style="{StaticResource Headline}" VerticalOptions="Center"/>
            <Button Grid.Column="1" Text="+ New Receipt" Command="{Binding GoToCreateReceiptCommand}" Style="{StaticResource TextButton}"/>
        </Grid>

        <!-- Loading Indicator -->
        <ActivityIndicator Grid.Row="0" Grid.RowSpan="2" 
                          IsRunning="{Binding IsBusy}" 
                          IsVisible="{Binding IsBusy}" 
                          VerticalOptions="Center" 
                          HorizontalOptions="Center"/>

        <!-- Error Message -->
        <Label Grid.Row="1" 
               Text="{Binding ErrorMessage}" 
               Style="{StaticResource ErrorLabel}" 
               IsVisible="{Binding HasError}" 
               VerticalOptions="Center" 
               HorizontalOptions="Center"/>

        <!-- Main Content -->
        <RefreshView Grid.Row="1" 
                     Command="{Binding LoadReceiptsCommand}"
                     CommandParameter="True" 
                     IsRefreshing="{Binding IsBusy}" 
                     IsVisible="{Binding ShowContent}">
            <CollectionView ItemsSource="{Binding Receipts}"
                           SelectionMode="Single"
                           SelectionChangedCommand="{Binding GoToReceiptDetailsCommand}"
                           SelectionChangedCommandParameter="{Binding SelectedItem, Source={RelativeSource Self}}"
                           RemainingItemsThreshold="2"
                           RemainingItemsThresholdReachedCommand="{Binding LoadMoreReceiptsCommand}">

                <CollectionView.EmptyView>
                    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="20">
                        <Label Text="No stock receipts found." 
                               HorizontalOptions="Center" 
                               VerticalOptions="Center"/>
                        <Button Text="Retry" 
                                Command="{Binding LoadReceiptsCommand}"
                                CommandParameter="True"
                                Margin="0,10"
                                Style="{StaticResource TextButton}"/>
                    </StackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="dto:StockReceiptDto">
                        <Border Style="{StaticResource CardBorder}" Padding="15" Margin="0,0,0,10">
                            <Grid RowDefinitions="Auto, Auto" ColumnDefinitions="*, Auto" RowSpacing="5">
                                <!-- Receipt ID -->
                                <Label Grid.Row="0" Grid.Column="0" FontSize="Small" TextColor="{StaticResource Gray600Light}">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="Receipt #"/>
                                            <Span Text="{Binding Id, Converter={StaticResource GuidShortenerConverter}}"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>

                                <!-- Receipt Date -->
                                <Label Grid.Row="0" Grid.Column="1" 
                                       Text="{Binding ReceiptDate, StringFormat='{0:dd MMM yyyy}'}" 
                                       FontSize="Small" 
                                       HorizontalTextAlignment="End"/>

                                <!-- Supplier -->
                                <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                                       Text="{Binding Supplier.Name, StringFormat='Supplier: {0}'}" 
                                       FontAttributes="Bold"
                                       IsVisible="{Binding Supplier, Converter={StaticResource NullToBoolConverter}}"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>