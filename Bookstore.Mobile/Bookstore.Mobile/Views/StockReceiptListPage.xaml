<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Bookstore.Mobile.ViewModels"
             xmlns:dto="clr-namespace:Bookstore.Mobile.Models"
             xmlns:converters="clr-namespace:Bookstore.Mobile.Converters"
             xmlns:system="clr-namespace:System;assembly=netstandard"
             x:DataType="vm:StockReceiptListViewModel"
             x:Class="Bookstore.Mobile.Views.StockReceiptListPage"
             BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}"
             Title="{Binding Title}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Styles -->
            <Style x:Key="Headline" TargetType="Label">
                <Setter Property="FontSize" Value="24"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"/>
                <Setter Property="Margin" Value="0,0,0,5"/>
            </Style>

            <Style x:Key="TextButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="Transparent"/>
                <Setter Property="TextColor" Value="{StaticResource Primary}"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Padding" Value="15,10"/>
            </Style>

            <Style x:Key="AddButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource Primary}"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="CornerRadius" Value="20"/>
                <Setter Property="Padding" Value="15,10"/>
                <Setter Property="HeightRequest" Value="40"/>
            </Style>

            <Style x:Key="ErrorLabel" TargetType="Label">
                <Setter Property="TextColor" Value="Red"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="FontSize" Value="16"/>
            </Style>

            <Style x:Key="CardBorder" TargetType="Border">
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=White, Dark={StaticResource Gray800}}"/>
                <Setter Property="Stroke" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray700}}"/>
                <Setter Property="StrokeShape" Value="RoundRectangle 12"/>
                <Setter Property="StrokeThickness" Value="1"/>
                <Setter Property="Shadow">
                    <Setter.Value>
                        <Shadow Brush="{AppThemeBinding Light={StaticResource Gray300}, Dark=Black}"
                                Offset="0,2"
                                Radius="4"
                                Opacity="0.2"/>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="ReceiptIdStyle" TargetType="Label">
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}"/>
            </Style>

            <Style x:Key="DateStyle" TargetType="Label">
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"/>
                <Setter Property="FontAttributes" Value="Bold"/>
            </Style>

            <Style x:Key="SupplierStyle" TargetType="Label">
                <Setter Property="FontSize" Value="15"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray900}, Dark=White}"/>
            </Style>

            <Style x:Key="EmptyTextStyle" TargetType="Label">
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="VerticalOptions" Value="Center"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}"/>
            </Style>

            <!-- Converters -->
            <converters:GuidShortenerConverter x:Key="GuidShortenerConverter"/>
            <converters:ObjectNotNullBoolConverter x:Key="ObjectNotNullBoolConverter"/>
            <converters:StringNotNullOrEmptyBoolConverter x:Key="StringNotNullOrEmptyBoolConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto, *">
        <!-- Header -->
        <Grid Grid.Row="0" Padding="20,15" ColumnDefinitions="*, Auto">
            <Label Text="Stock Receipts" Style="{StaticResource Headline}" VerticalOptions="Center"/>
            <Button Grid.Column="1" 
                    Text="+ New Receipt" 
                    Command="{Binding GoToCreateReceiptCommand}" 
                    Style="{StaticResource AddButton}"
                    WidthRequest="150"/>
        </Grid>

        <!-- Loading Indicator -->
        <Grid Grid.Row="0" Grid.RowSpan="2" 
              IsVisible="{Binding IsBusy}"
              BackgroundColor="{AppThemeBinding Light=White, Dark={StaticResource Gray900}}"
              Opacity="0.7">
            <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="15">
                <ActivityIndicator IsRunning="{Binding IsBusy}" 
                                  IsVisible="{Binding IsBusy}" 
                                  Color="{StaticResource Primary}"
                                  HeightRequest="50"
                                  WidthRequest="50"/>
                <Label Text="Loading receipts..." 
                       TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark=White}"
                       FontSize="14"/>
            </VerticalStackLayout>
        </Grid>

        <!-- Error Message -->
        <Border Grid.Row="1" 
                Style="{StaticResource CardBorder}"
                Margin="20,0"
                IsVisible="{Binding HasError}"
                VerticalOptions="Center" 
                HorizontalOptions="Center">
            <VerticalStackLayout Padding="20" Spacing="15">
                <Label Text="âŒ Error" 
                       FontSize="18" 
                       FontAttributes="Bold" 
                       TextColor="Red"/>
                <Label Text="{Binding ErrorMessage}" 
                       Style="{StaticResource ErrorLabel}"/>
                <Button Text="Try Again" 
                        Command="{Binding LoadReceiptsCommand}"
                        CommandParameter="True"
                        Style="{StaticResource TextButton}"/>
            </VerticalStackLayout>
        </Border>

        <!-- Main Content -->
        <RefreshView Grid.Row="1" 
                     Command="{Binding LoadReceiptsCommand}"
                     CommandParameter="True" 
                     IsRefreshing="{Binding IsRefreshing}" 
                     IsVisible="{Binding ShowContent}">
            <CollectionView ItemsSource="{Binding Receipts}"
                           SelectionMode="Single"
                           SelectionChangedCommand="{Binding GoToReceiptDetailsCommand}"
                           SelectionChangedCommandParameter="{Binding SelectedItem, Source={RelativeSource Self}}"
                           RemainingItemsThreshold="2"
                           RemainingItemsThresholdReachedCommand="{Binding LoadMoreReceiptsCommand}"
                           Margin="15,0">

                <CollectionView.EmptyView>
                    <Border Style="{StaticResource CardBorder}"
                            Margin="20,40"
                            MaximumHeightRequest="250"
                            VerticalOptions="Start">
                        <VerticalStackLayout Padding="25" Spacing="15" VerticalOptions="Center" HorizontalOptions="Center">
                            <Image Source="inventory_empty.png" 
                                   HeightRequest="100" 
                                   WidthRequest="100"
                                   Aspect="AspectFit"
                                   HorizontalOptions="Center"/>
                            <Label Text="No stock receipts found." 
                                   Style="{StaticResource EmptyTextStyle}"/>
                            <Label Text="Create a new receipt or pull down to refresh."
                                   FontSize="14"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray500}}"
                                   HorizontalOptions="Center"/>
                            <Button Text="Create New Receipt" 
                                    Command="{Binding GoToCreateReceiptCommand}"
                                    Style="{StaticResource AddButton}"
                                    Margin="0,10,0,0"/>
                        </VerticalStackLayout>
                    </Border>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="dto:StockReceiptDto">
                        <Grid Padding="5,5" Margin="0,5">
                            <Border Style="{StaticResource CardBorder}" Padding="0">
                                <Grid RowDefinitions="Auto, Auto, Auto" ColumnDefinitions="*" RowSpacing="0">
                                    <!-- Status Bar - Can be colored based on receipt status if needed -->
                                    <BoxView Grid.Row="0" 
                                             HeightRequest="6" 
                                             Color="{StaticResource Primary}"
                                             HorizontalOptions="Fill"/>

                                    <!-- Receipt ID and Date -->
                                    <Grid Grid.Row="1" 
                                          Padding="15,12" 
                                          ColumnDefinitions="*, Auto"
                                          BackgroundColor="{AppThemeBinding Light={StaticResource Gray50}, Dark={StaticResource Gray800}}">

                                        <Label Grid.Column="0" Style="{StaticResource ReceiptIdStyle}">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="Receipt #"/>
                                                    <Span Text="{Binding Id, Converter={StaticResource GuidShortenerConverter}}"/>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>

                                        <Label Grid.Column="1" 
                                               Text="{Binding ReceiptDate, StringFormat='{0:dd MMM yyyy}'}" 
                                               Style="{StaticResource DateStyle}"/>
                                    </Grid>

                                    <!-- Supplier Info -->
                                    <Grid Grid.Row="2" Padding="15,15">
                                        <Label Style="{StaticResource SupplierStyle}"
                                               TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark=White}"
                                               VerticalOptions="Center"
                                               IsVisible="{Binding Supplier, Converter={StaticResource ObjectNotNullBoolConverter}}">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="Supplier: "/>
                                                    <Span Text="{Binding Supplier.Name}" FontAttributes="Bold"/>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                    </Grid>
                                </Grid>
                            </Border>

                            <!-- Visual indicator for tap -->
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup Name="CommonStates">
                                    <VisualState Name="Normal"/>
                                    <VisualState Name="Selected">
                                        <VisualState.Setters>
                                            <Setter Property="Scale" Value="0.98" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

                <CollectionView.Footer>
                    <VerticalStackLayout Padding="0,5,0,20" IsVisible="{Binding _isLoadingMore}">
                        <ActivityIndicator IsRunning="True" 
                                          HorizontalOptions="Center"
                                          VerticalOptions="Center"
                                          HeightRequest="30"
                                          WidthRequest="30"
                                          Color="{StaticResource Primary}"/>
                        <Label Text="Loading more..."
                               HorizontalOptions="Center"
                               FontSize="12"
                               TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}"/>
                    </VerticalStackLayout>
                </CollectionView.Footer>
            </CollectionView>
        </RefreshView>

        <!-- Add FAB as an alternative to header button -->
        <Button Grid.Row="1"
                Text="+"
                FontSize="24"
                Command="{Binding GoToCreateReceiptCommand}"
                BackgroundColor="{StaticResource Primary}"
                TextColor="White"
                CornerRadius="30"
                HeightRequest="60"
                WidthRequest="60"
                Padding="0"
                VerticalOptions="End"
                HorizontalOptions="End"
                Margin="0,0,25,25"/>
    </Grid>
</ContentPage>