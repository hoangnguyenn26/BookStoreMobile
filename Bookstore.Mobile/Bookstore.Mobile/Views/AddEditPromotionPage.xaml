<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Bookstore.Mobile.ViewModels"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             x:DataType="vm:AddEditPromotionViewModel"
             x:Class="Bookstore.Mobile.Views.AddEditPromotionPage"
             Title="{Binding Title}"
             BackgroundColor="#F8F9FA">

    <ScrollView>
        <Grid RowDefinitions="Auto,*" Padding="20">
            <!-- Header Section -->
            <VerticalStackLayout Grid.Row="0" Spacing="5" Margin="0,10,0,15">
                <Label Text="{Binding Title}" 
                       Style="{StaticResource Headline}" 
                       HorizontalOptions="Center" 
                       FontSize="24"
                       FontAttributes="Bold"/>
                <BoxView HeightRequest="2" 
                         HorizontalOptions="Center" 
                         WidthRequest="60"
                         Color="{AppThemeBinding Light=#3498DB, Dark=#5DADE2}"
                         Margin="0,5,0,10"/>
            </VerticalStackLayout>

            <!-- Loading and Error States -->
            <VerticalStackLayout Grid.Row="1" HorizontalOptions="Center" VerticalOptions="Center" IsVisible="{Binding IsBusy}">
                <ActivityIndicator IsRunning="{Binding IsBusy}" 
                                   IsVisible="True"
                                   Color="{AppThemeBinding Light=#3498DB, Dark=#5DADE2}"
                                   HeightRequest="50" 
                                   WidthRequest="50"/>
                <Label Text="Loading..." 
                       HorizontalOptions="Center" 
                       Margin="0,10,0,0"/>
            </VerticalStackLayout>

            <!-- Error Message -->
            <Frame Grid.Row="1" 
                   IsVisible="{Binding HasError}"
                   BackgroundColor="#FFEBEE"
                   BorderColor="#E57373"
                   Padding="15"
                   CornerRadius="8"
                   Margin="0,10,0,15">
                <StackLayout Orientation="Horizontal" Spacing="10">
                    <Label Text="⚠️" FontSize="20" VerticalOptions="Center"/>
                    <Label Text="{Binding ErrorMessage}" 
                           TextColor="#D32F2F"
                           FontSize="14"
                           VerticalOptions="Center"/>
                </StackLayout>
            </Frame>

            <!-- Main Form Content -->
            <VerticalStackLayout Grid.Row="1" IsVisible="{Binding ShowFormContent}" Spacing="16">
                <!-- Basic Information Card -->
                <Frame BackgroundColor="White" 
                       BorderColor="#E0E0E0" 
                       CornerRadius="10" 
                       Padding="15" 
                       HasShadow="True">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="Promotion Information" 
                               FontAttributes="Bold" 
                               FontSize="16"
                               TextColor="{AppThemeBinding Light=#3498DB, Dark=#5DADE2}"/>

                        <Frame Style="{StaticResource EntryFrame}" 
                               BorderColor="#E0E0E0" 
                               BackgroundColor="#F5F5F5"
                               Padding="10,2" 
                               CornerRadius="6">
                            <Entry Placeholder="Promotion Code *" 
                                   Text="{Binding Code}" 
                                   ReturnType="Next"
                                   PlaceholderColor="#BDBDBD"/>
                        </Frame>

                        <Frame Style="{StaticResource EntryFrame}" 
                               HeightRequest="90" 
                               BorderColor="#E0E0E0" 
                               BackgroundColor="#F5F5F5"
                               Padding="10,2" 
                               CornerRadius="6">
                            <Editor Placeholder="Description (Optional)" 
                                    Text="{Binding Description}" 
                                    AutoSize="TextChanges"
                                    PlaceholderColor="#BDBDBD"/>
                        </Frame>
                    </VerticalStackLayout>
                </Frame>

                <!-- Discount Settings Card -->
                <Frame BackgroundColor="White" 
                       BorderColor="#E0E0E0" 
                       CornerRadius="10" 
                       Padding="15" 
                       HasShadow="True">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="Discount Settings" 
                               FontAttributes="Bold" 
                               FontSize="16"
                               TextColor="{AppThemeBinding Light=#3498DB, Dark=#5DADE2}"/>

                        <Label Text="Discount Type:" 
                               FontSize="14" 
                               Margin="0,0,0,0"/>

                        <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                            <Frame Grid.Column="0" 
                                   Padding="10" 
                                   BorderColor="{Binding IsPercentageDiscount, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#3498DB,#E0E0E0'}"
                                   BackgroundColor="{Binding IsPercentageDiscount, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#EBF5FB,White'}"
                                   CornerRadius="8">
                                <RadioButton Content="Percentage" 
                                             IsChecked="{Binding IsPercentageDiscount}" 
                                             GroupName="DiscountTypeGroup"/>
                            </Frame>
                            <Frame Grid.Column="1" 
                                   Padding="10" 
                                   BorderColor="{Binding IsFixedAmountDiscount, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#3498DB,#E0E0E0'}"
                                   BackgroundColor="{Binding IsFixedAmountDiscount, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#EBF5FB,White'}"
                                   CornerRadius="8">
                                <RadioButton Content="Fixed Amount" 
                                             IsChecked="{Binding IsFixedAmountDiscount}" 
                                             GroupName="DiscountTypeGroup"/>
                            </Frame>
                        </Grid>

                        <Frame IsVisible="{Binding IsPercentageDiscount}" 
                               Style="{StaticResource EntryFrame}" 
                               BorderColor="#E0E0E0" 
                               BackgroundColor="#F5F5F5"
                               Padding="10,2" 
                               CornerRadius="6">
                            <Grid ColumnDefinitions="*,Auto">
                                <Entry Placeholder="Discount Percentage *" 
                                       Keyboard="Numeric" 
                                       Text="{Binding DiscountPercentage}"
                                       PlaceholderColor="#BDBDBD"/>
                                <Label Grid.Column="1" 
                                       Text="%" 
                                       VerticalOptions="Center" 
                                       FontAttributes="Bold"
                                       Margin="0,0,10,0"/>
                            </Grid>
                        </Frame>

                        <Frame IsVisible="{Binding IsFixedAmountDiscount}" 
                               Style="{StaticResource EntryFrame}" 
                               BorderColor="#E0E0E0" 
                               BackgroundColor="#F5F5F5"
                               Padding="10,2" 
                               CornerRadius="6">
                            <Grid ColumnDefinitions="Auto,*">
                                <Label Grid.Column="0" 
                                       Text="$" 
                                       VerticalOptions="Center" 
                                       FontAttributes="Bold"
                                       Margin="10,0,0,0"/>
                                <Entry Grid.Column="1" 
                                       Placeholder="Discount Amount *" 
                                       Keyboard="Numeric" 
                                       Text="{Binding DiscountAmount}"
                                       PlaceholderColor="#BDBDBD"/>
                            </Grid>
                        </Frame>
                    </VerticalStackLayout>
                </Frame>

                <!-- Validity Period Card -->
                <Frame BackgroundColor="White" 
                       BorderColor="#E0E0E0" 
                       CornerRadius="10" 
                       Padding="15" 
                       HasShadow="True">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="Validity Period" 
                               FontAttributes="Bold" 
                               FontSize="16"
                               TextColor="{AppThemeBinding Light=#3498DB, Dark=#5DADE2}"/>

                        <Grid ColumnDefinitions="*,*" ColumnSpacing="15" RowSpacing="10">
                            <VerticalStackLayout Grid.Column="0" Spacing="5">
                                <Label Text="Start Date *" FontSize="14"/>
                                <Frame BorderColor="#E0E0E0" 
                                       BackgroundColor="#F5F5F5"
                                       Padding="10,0" 
                                       CornerRadius="6">
                                    <DatePicker Date="{Binding StartDate}" 
                                                Format="MMM dd, yyyy"
                                                FontSize="14"/>
                                </Frame>
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="1" Spacing="5">
                                <Grid ColumnDefinitions="Auto,*,Auto">
                                    <Label Grid.Column="0" Text="End Date" FontSize="14" VerticalOptions="Center"/>
                                    <Switch Grid.Column="1" 
                                            IsToggled="{Binding HasEndDate}" 
                                            VerticalOptions="Center"
                                            HorizontalOptions="Start"
                                            OnColor="{AppThemeBinding Light=#3498DB, Dark=#5DADE2}"/>
                                    <Label Grid.Column="2" 
                                           Text="(Optional)" 
                                           FontSize="12" 
                                           TextColor="#757575"
                                           VerticalOptions="Center"/>
                                </Grid>
                                <Frame BorderColor="{Binding HasEndDate, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#E0E0E0,#BDBDBD'}"
                                       BackgroundColor="{Binding HasEndDate, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#F5F5F5,#EEEEEE'}"
                                       Padding="10,0" 
                                       CornerRadius="6">
                                    <DatePicker Date="{Binding EndDateForPicker}" 
                                                Format="MMM dd, yyyy"
                                                IsEnabled="{Binding HasEndDate}"
                                                FontSize="14"/>
                                </Frame>
                            </VerticalStackLayout>
                        </Grid>
                    </VerticalStackLayout>
                </Frame>

                <!-- Additional Settings Card -->
                <Frame BackgroundColor="White" 
                       BorderColor="#E0E0E0" 
                       CornerRadius="10" 
                       Padding="15" 
                       HasShadow="True">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="Additional Settings" 
                               FontAttributes="Bold" 
                               FontSize="16"
                               TextColor="{AppThemeBinding Light=#3498DB, Dark=#5DADE2}"/>

                        <Frame Style="{StaticResource EntryFrame}" 
                               BorderColor="#E0E0E0" 
                               BackgroundColor="#F5F5F5"
                               Padding="10,2" 
                               CornerRadius="6">
                            <Entry Placeholder="Max Usage (Leave empty for unlimited)" 
                                   Keyboard="Numeric" 
                                   Text="{Binding MaxUsage}"
                                   PlaceholderColor="#BDBDBD"/>
                        </Frame>

                        <Frame BorderColor="#E0E0E0" 
                               Padding="15,10" 
                               CornerRadius="8"
                               BackgroundColor="{Binding IsActive, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#E8F5E9,#FFEBEE'}">
                            <Grid ColumnDefinitions="Auto,*,Auto">
                                <Switch Grid.Column="0" 
                                        IsToggled="{Binding IsActive}"
                                        OnColor="{AppThemeBinding Light=#4CAF50, Dark=#81C784}"/>
                                <Label Grid.Column="1" 
                                       Text="Activate Promotion" 
                                       VerticalOptions="Center"
                                       FontSize="14"/>
                                <Label Grid.Column="2" 
                                       Text="{Binding IsActive, Converter={StaticResource BoolToStringConverter}, ConverterParameter='Active,Inactive'}"
                                       TextColor="{Binding IsActive, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#4CAF50,#F44336'}"
                                       FontAttributes="Bold"
                                       FontSize="14"
                                       VerticalOptions="Center"/>
                            </Grid>
                        </Frame>
                    </VerticalStackLayout>
                </Frame>

                <!-- Save Button -->
                <Button Text="Save Promotion" 
                        Command="{Binding SavePromotionCommand}" 
                        IsEnabled="{Binding CanSavePromotion}"
                        BackgroundColor="{AppThemeBinding Light=#3498DB, Dark=#5DADE2}"
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="25"
                        HeightRequest="50"
                        Margin="40,15,40,30"/>
            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>