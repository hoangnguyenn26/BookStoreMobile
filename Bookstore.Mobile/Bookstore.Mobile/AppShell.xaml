
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:Bookstore.Mobile"
       xmlns:views="clr-namespace:Bookstore.Mobile.Views"
       x:Class="Bookstore.Mobile.AppShell"
       Shell.FlyoutBehavior="Flyout">
    <Shell.Resources>
    </Shell.Resources>

    <Shell.FlyoutHeader>
        <VerticalStackLayout Padding="10" BackgroundColor="{AppThemeBinding Light={StaticResource PrimaryLight}, Dark={StaticResource PrimaryDark}}">
            <Label Text="Bookstore App" TextColor="White" FontSize="Large" HorizontalOptions="Center" />
        </VerticalStackLayout>
    </Shell.FlyoutHeader>

    <!-- Các mục trong Flyout -->
    <FlyoutItem Title="Home" Icon="home.png">
        <ShellContent Title="Home"
                      ContentTemplate="{DataTemplate views:HomePage}"
                      Route="HomePage" />
    </FlyoutItem>

    <FlyoutItem Title="Categories" Icon="categories.png">
        <ShellContent Title="Categories"
                       ContentTemplate="{DataTemplate views:CategoriesPage}"
                       Route="CategoriesPage" />
    </FlyoutItem>

    <!--<FlyoutItem Title="My Wishlist" Icon="wishlist.png">
        <ShellContent Title="Wishlist"
                       ContentTemplate="{DataTemplate views:WishlistPage}"
                       Route="WishlistPage" 
    </FlyoutItem> />-->

    <FlyoutItem Title="My Cart" Icon="cart.png">
        <ShellContent Title="Cart"
                       ContentTemplate="{DataTemplate views:CartPage}"
                       Route="CartPage" />
    </FlyoutItem>

    <!-- Mục chỉ hiển thị khi đăng nhập (sẽ xử lý logic sau) -->
    <FlyoutItem Title="My Profile" Icon="profile.png">
        <ShellContent Title="Profile"
                       ContentTemplate="{DataTemplate views:ProfilePage}"
                       Route="ProfilePage" />
    </FlyoutItem>

    <!-- Các trang không hiện trong Flyout nhưng có thể điều hướng tới -->
    <ShellContent Title="Login"
                   ContentTemplate="{DataTemplate views:LoginPage}"
                   Route="LoginPage"
                   Shell.FlyoutItemIsVisible="False"
                   Shell.NavBarIsVisible="False"/>

    <ShellContent Title="Register"
                   ContentTemplate="{DataTemplate views:RegisterPage}"
                   Route="RegisterPage"
                    Shell.FlyoutItemIsVisible="False"
                   Shell.NavBarIsVisible="False"/>

    <ShellContent Title="Books"
                   ContentTemplate="{DataTemplate views:BooksPage}"
                   Route="BooksPage"
                   Shell.FlyoutItemIsVisible="False"/>
    <!-- Trang sách sẽ được điều hướng tới --><!--

    <ShellContent Title="Book Details"
                   ContentTemplate="{DataTemplate views:BookDetailsPage}"
                   Route="BookDetailsPage"
                   Shell.FlyoutItemIsVisible="False"/>-->

    <!-- Thêm các trang khác: AddressList, OrderHistory, OrderDetails, Checkout... -->


</Shell>