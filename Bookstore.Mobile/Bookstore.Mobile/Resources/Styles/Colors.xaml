<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- ===================== PROFESSIONAL MODERN COLOR PALETTE ===================== -->
    <!-- ============================= LIGHT THEME ================================ -->

    <!-- Primary Indigo -->
    <Color x:Key="PrimaryLight">#3F51B5</Color>
    <Color x:Key="PrimaryVariantLight">#303F9F</Color>
    <Color x:Key="PrimaryLightHover">#5C6BC0</Color>
    <Color x:Key="PrimaryLightPressed">#283593</Color>
    <Color x:Key="OnPrimaryLight">#FFFFFF</Color>

    <!-- Accent/Secondary Amber -->
    <Color x:Key="AccentLight">#FFC107</Color>
    <Color x:Key="AccentLightHover">#FFD54F</Color>
    <Color x:Key="AccentLightPressed">#FFA000</Color>
    <Color x:Key="OnAccentLight">#23272F</Color>

    <!-- Background & Surface -->
    <Color x:Key="BackgroundLight">#F5F6FA</Color>
    <Color x:Key="OnBackgroundLight">#23272F</Color>
    <Color x:Key="SurfaceLight">#FFFFFF</Color>
    <Color x:Key="OnSurfaceLight">#23272F</Color>
    <Color x:Key="SurfaceVariantLight">#E0E3EB</Color>

    <!-- Info/Blue -->
    <Color x:Key="InfoLight">#38BDF8</Color>
    <Color x:Key="OnInfoLight">#FFFFFF</Color>

    <!-- Success/Emerald -->
    <Color x:Key="SuccessLight">#10B981</Color>
    <Color x:Key="OnSuccessLight">#FFFFFF</Color>

    <!-- Warning/Orange -->
    <Color x:Key="WarningLight">#F59E42</Color>
    <Color x:Key="OnWarningLight">#23272F</Color>

    <!-- Error/Red -->
    <Color x:Key="ErrorLight">#EF4444</Color>
    <Color x:Key="OnErrorLight">#FFFFFF</Color>

    <!-- Gray Scale (Light) -->
    <Color x:Key="Gray50Light">#F8FAFC</Color>
    <Color x:Key="Gray100Light">#F5F6FA</Color>
    <Color x:Key="Gray200Light">#E5E7EB</Color>
    <Color x:Key="Gray300Light">#D1D5DB</Color>
    <Color x:Key="Gray400Light">#9CA3AF</Color>
    <Color x:Key="Gray500Light">#6B7280</Color>
    <Color x:Key="Gray600Light">#4B5563</Color>
    <Color x:Key="Gray700Light">#374151</Color>
    <Color x:Key="Gray800Light">#23272F</Color>

    <!-- Utility -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="Transparent">Transparent</Color>

    <!-- ============================= DARK THEME ================================ -->

    <Color x:Key="PrimaryDark">#7986CB</Color>
    <Color x:Key="PrimaryVariantDark">#5C6BC0</Color>
    <Color x:Key="PrimaryDarkHover">#9FA8DA</Color>
    <Color x:Key="PrimaryDarkPressed">#3949AB</Color>
    <Color x:Key="OnPrimaryDark">#FFFFFF</Color>

    <Color x:Key="AccentDark">#FFD54F</Color>
    <Color x:Key="AccentDarkHover">#FFE082</Color>
    <Color x:Key="AccentDarkPressed">#FFA000</Color>
    <Color x:Key="OnAccentDark">#23272F</Color>

    <Color x:Key="BackgroundDark">#181A20</Color>
    <Color x:Key="OnBackgroundDark">#F5F6FA</Color>
    <Color x:Key="SurfaceDark">#23272F</Color>
    <Color x:Key="OnSurfaceDark">#F5F6FA</Color>
    <Color x:Key="SurfaceVariantDark">#2D3142</Color>

    <Color x:Key="InfoDark">#38BDF8</Color>
    <Color x:Key="OnInfoDark">#23272F</Color>

    <Color x:Key="SuccessDark">#10B981</Color>
    <Color x:Key="OnSuccessDark">#23272F</Color>

    <Color x:Key="WarningDark">#F59E42</Color>
    <Color x:Key="OnWarningDark">#23272F</Color>

    <Color x:Key="ErrorDark">#EF4444</Color>
    <Color x:Key="OnErrorDark">#FFFFFF</Color>

    <!-- Gray Scale (Dark) -->
    <Color x:Key="Gray50Dark">#23272F</Color>
    <Color x:Key="Gray100Dark">#2D3142</Color>
    <Color x:Key="Gray200Dark">#374151</Color>
    <Color x:Key="Gray300Dark">#4B5563</Color>
    <Color x:Key="Gray400Dark">#6B7280</Color>
    <Color x:Key="Gray500Dark">#9CA3AF</Color>
    <Color x:Key="Gray600Dark">#D1D5DB</Color>
    <Color x:Key="Gray700Dark">#F5F6FA</Color>
    <Color x:Key="Gray800Dark">#FFFFFF</Color>

</ResourceDictionary>