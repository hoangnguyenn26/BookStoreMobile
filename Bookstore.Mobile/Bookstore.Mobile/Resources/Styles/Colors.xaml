<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- ===================== PROFESSIONAL BOOK STORE COLOR PALETTE ===================== -->
    <!-- ============================= LIGHT THEME ================================ -->

    <!-- Primary - Deep Teal (Sophisticated, professional, calming) -->
    <Color x:Key="PrimaryLight">#006064</Color>
    <Color x:Key="PrimaryVariantLight">#00474B</Color>
    <Color x:Key="PrimaryLightHover">#00797C</Color>
    <Color x:Key="PrimaryLightPressed">#004446</Color>
    <Color x:Key="OnPrimaryLight">#FFFFFF</Color>

    <!-- Accent - Warm Gold (Inviting, premium feeling) -->
    <Color x:Key="AccentLight">#D4A72C</Color>
    <Color x:Key="AccentLightHover">#E0B94A</Color>
    <Color x:Key="AccentLightPressed">#B88D1C</Color>
    <Color x:Key="OnAccentLight">#FFFFFF</Color>

    <!-- Background & Surface - Paper-like -->
    <Color x:Key="BackgroundLight">#F8F5F2</Color>
    <!-- Warm off-white like paper -->
    <Color x:Key="OnBackgroundLight">#252221</Color>
    <Color x:Key="SurfaceLight">#FFFFFF</Color>
    <Color x:Key="OnSurfaceLight">#252221</Color>
    <Color x:Key="SurfaceVariantLight">#EAE6E1</Color>
    <!-- Subtle paper texture hint -->

    <!-- Feedback Colors -->
    <Color x:Key="InfoLight">#0288D1</Color>
    <!-- More bookish blue -->
    <Color x:Key="OnInfoLight">#FFFFFF</Color>

    <Color x:Key="SuccessLight">#2E7D32</Color>
    <!-- Deeper, more mature green -->
    <Color x:Key="OnSuccessLight">#FFFFFF</Color>

    <Color x:Key="WarningLight">#F57C00</Color>
    <!-- Warm amber -->
    <Color x:Key="OnWarningLight">#FFFFFF</Color>

    <Color x:Key="ErrorLight">#C62828</Color>
    <!-- Deeper, less aggressive red -->
    <Color x:Key="OnErrorLight">#FFFFFF</Color>

    <!-- Gray Scale (Light) - Warmer grays for book theme -->
    <Color x:Key="Gray50Light">#FAF9F7</Color>
    <Color x:Key="Gray100Light">#F5F2EF</Color>
    <Color x:Key="Gray200Light">#E8E5E2</Color>
    <Color x:Key="Gray300Light">#D6D2CE</Color>
    <Color x:Key="Gray400Light">#AEA99F</Color>
    <Color x:Key="Gray500Light">#827D74</Color>
    <Color x:Key="Gray600Light">#5F5B54</Color>
    <Color x:Key="Gray700Light">#413E3A</Color>
    <Color x:Key="Gray800Light">#2C2926</Color>
    <Color x:Key="Gray900Light">#1A1816</Color>

    <!-- Classic Library Theme - Alternate Light -->
    <Color x:Key="ClassicPrimaryLight">#4A3C30</Color>
    <!-- Rich brown -->
    <Color x:Key="ClassicAccentLight">#8B7355</Color>
    <!-- Aged leather -->
    <Color x:Key="ClassicBackgroundLight">#F5F1E8</Color>
    <!-- Old paper -->
    <Color x:Key="ClassicSurfaceLight">#FBF7EE</Color>
    <!-- Parchment -->

    <!-- Utility -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="Transparent">Transparent</Color>

    <!-- ============================= DARK THEME ================================ -->

    <!-- Primary - Softer teal for dark mode -->
    <Color x:Key="PrimaryDark">#4DB6AC</Color>
    <Color x:Key="PrimaryVariantDark">#26A69A</Color>
    <Color x:Key="PrimaryDarkHover">#80CBC4</Color>
    <Color x:Key="PrimaryDarkPressed">#00897B</Color>
    <Color x:Key="OnPrimaryDark">#121212</Color>

    <!-- Accent - Softer gold for dark mode -->
    <Color x:Key="AccentDark">#E6C158</Color>
    <Color x:Key="AccentDarkHover">#EED485</Color>
    <Color x:Key="AccentDarkPressed">#C9A227</Color>
    <Color x:Key="OnAccentDark">#121212</Color>

    <!-- Dark mode backgrounds - Subtle paper texture in dark -->
    <Color x:Key="BackgroundDark">#121212</Color>
    <Color x:Key="OnBackgroundDark">#E1DED9</Color>
    <Color x:Key="SurfaceDark">#1E1E1E</Color>
    <Color x:Key="OnSurfaceDark">#E1DED9</Color>
    <Color x:Key="SurfaceVariantDark">#2A2A2A</Color>

    <!-- Feedback Colors - More visible in dark mode -->
    <Color x:Key="InfoDark">#4FC3F7</Color>
    <Color x:Key="OnInfoDark">#121212</Color>

    <Color x:Key="SuccessDark">#66BB6A</Color>
    <Color x:Key="OnSuccessDark">#121212</Color>

    <Color x:Key="WarningDark">#FFA726</Color>
    <Color x:Key="OnWarningDark">#121212</Color>

    <Color x:Key="ErrorDark">#EF5350</Color>
    <Color x:Key="OnErrorDark">#121212</Color>

    <!-- Gray Scale (Dark) - Warmer grays for book theme -->
    <Color x:Key="Gray50Dark">#1E1E1E</Color>
    <Color x:Key="Gray100Dark">#252525</Color>
    <Color x:Key="Gray200Dark">#303030</Color>
    <Color x:Key="Gray300Dark">#424242</Color>
    <Color x:Key="Gray400Dark">#616161</Color>
    <Color x:Key="Gray500Dark">#9E9E9E</Color>
    <Color x:Key="Gray600Dark">#BDBDBD</Color>
    <Color x:Key="Gray700Dark">#E0E0E0</Color>
    <Color x:Key="Gray800Dark">#EEEEEE</Color>
    <Color x:Key="Gray900Dark">#F5F5F5</Color>

    <!-- Classic Library Theme - Alternate Dark -->
    <Color x:Key="ClassicPrimaryDark">#A47C5B</Color>
    <!-- Aged leather -->
    <Color x:Key="ClassicAccentDark">#C9A878</Color>
    <!-- Antique gold -->
    <Color x:Key="ClassicBackgroundDark">#1A1612</Color>
    <!-- Dark wood -->
    <Color x:Key="ClassicSurfaceDark">#262018</Color>
    <!-- Walnut -->

    <!-- Special Feature Colors -->
    <Color x:Key="BookOfDayBorderLight">#D4A72C</Color>
    <!-- Gold border -->
    <Color x:Key="BookOfDayBackgroundLight">#FDF7E3</Color>
    <!-- Subtle highlight -->
    <Color x:Key="BookOfDayBorderDark">#E6C158</Color>
    <!-- Gold border (dark) -->
    <Color x:Key="BookOfDayBackgroundDark">#32302A</Color>
    <!-- Subtle highlight (dark) -->

    <!-- Reading Progress Colors -->
    <Color x:Key="ProgressTrackLight">#E0E0E0</Color>
    <Color x:Key="ProgressFillLight">#006064</Color>
    <Color x:Key="ProgressTrackDark">#424242</Color>
    <Color x:Key="ProgressFillDark">#4DB6AC</Color>

</ResourceDictionary>